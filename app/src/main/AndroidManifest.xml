<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="in.hideandseek.vaxvision">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".VaxVisionApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screens.splash.view.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.downloadcert.view.CertificateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.otp.view.OtpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.sessions.view.SessionsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.stateinfo.view.SelectStateActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".screens.home.view.HomeActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>