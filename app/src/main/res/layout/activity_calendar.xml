<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.calendar.view.CalendarActivity">

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/filter_chip_group"
        android:layout_width="0dp"
        app:chipSpacingHorizontal="@dimen/margin_xlarge"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_xlarge"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/filter_age_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18-44" />

        <com.google.android.material.chip.Chip
            android:id="@+id/filter_age_45"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45+" />

        <com.google.android.material.chip.Chip
            android:id="@+id/filter_fee_free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FREE" />

        <com.google.android.material.chip.Chip
            android:id="@+id/filter_fee_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAID" />

        <com.google.android.material.chip.Chip
            android:id="@+id/filter_vaccine_covi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COVISHIELD" />

        <com.google.android.material.chip.Chip
            android:id="@+id/filter_vaccine_covax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COVAXIN" />

        <com.google.android.material.chip.Chip
            android:id="@+id/filter_vaccine_sputnik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SPUTNIK V" />

    </com.google.android.material.chip.ChipGroup>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_dates_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_chip_group">

        <TextView
            android:id="@+id/tv_date_1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/textview_grey"
            android:textSize="@dimen/text_small"
            android:gravity="center"
            tools:text="Sun\n20 Jun"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_date_2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            tools:text="Sun\n20 Jun"
            android:layout_margin="2dp"
            android:background="@color/textview_grey"
            android:textSize="@dimen/text_small"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_date_3"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:background="@color/textview_grey"
            android:textSize="@dimen/text_small"
            android:gravity="center"
            tools:text="Sun\n20 Jun"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_date_4"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/textview_grey"
            android:textSize="@dimen/text_small"
            android:gravity="center"
            android:textStyle="bold"
            tools:text="Sun\n20 Jun"
            android:layout_margin="2dp"          android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_date_5"
            android:background="@color/textview_grey"
            android:textSize="@dimen/text_small"
            android:gravity="center"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:layout_height="40dp"
            tools:text="Sun\n20 Jun"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_date_6"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/textview_grey"
            android:textSize="@dimen/text_small"
            android:gravity="center"
            android:textStyle="bold"
            tools:text="Sun\n20 Jun"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/tv_date_7"
            android:layout_width="0dp"
            android:layout_height="40dp"
            tools:text="Sun\n20 Jun"
            android:layout_margin="2dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@color/textview_grey"
            android:textSize="@dimen/text_small"
            android:gravity="center"
            android:layout_weight="1"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin_small"
        android:id="@+id/rv_calender"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_dates_header" />

</androidx.constraintlayout.widget.ConstraintLayout>