<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>
    </style>
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="android:textColor">@color/black</item>
<!--        <item name="fontFamily">@font/regular</item>-->
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextInputLayout.ExposedDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="boxStrokeColor">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorSecondary</item>
        <item name="android:textColor">@color/black</item>
<!--        <item name="fontFamily">@font/regular</item>-->
        <item name="android:textSize">@dimen/text_large</item>
    </style>
</resources>